kind: Deployment
apiVersion: apps/v1
metadata:
  name: orion-server
  labels:
    app: orion
    type: server
spec:
  replicas: {{ REPLICAS }}
  selector:
    matchLabels:
      app: orion
      type: server

  template:
    metadata:
      labels:
        buildtime: {{ BUILDTIME }}
        app: orion
        type: server
    spec:
      terminationGracePeriodSeconds: 360
      imagePullSecrets:
        - name: syncano-k8s-pull-secret
      containers:
        - name: orion-server
          image: {{ IMAGE }}
          command:
            - "orion"
            - "server"
          securityContext:
            runAsGroup: 101
            runAsNonRoot: true
            runAsUser: 100
            fsGroup: 101
          resources:
            requests:
              memory: "256Mi"
              cpu: 250m
            limits:
              memory: "512Mi"
              cpu: 500m
          ports:
            - name: http
              containerPort: 8000
            - name: http-metrics
              containerPort: 9080
          env:
            - name: SERVICE_NAME
              value: orion-server
          envFrom:
            - configMapRef:
                name: orion
            - secretRef:
                name: orion
          livenessProbe:
            httpGet:
              path: /health
              port: 9080
            initialDelaySeconds: 5
          lifecycle:
            preStop:
              exec:
                command: ["/bin/sleep", "5"]

{%- if GCP_LOCATIONS %}
          volumeMounts:
  {%- for item in GCP_LOCATIONS.split(',') %}
            - name: {{ item }}-storage-credentials
              mountPath: /secrets/{{ item }}-storage
              readOnly: true
  {%- endfor %}
{%- endif %}
{%- if GCP_LOCATIONS %}
      volumes:
  {%- for item in GCP_LOCATIONS.split(',') %}
        - name: {{ item }}-storage-credentials
          secret:
            secretName: {{ item }}-storage-credentials
  {%- endfor %}
{%- endif %}

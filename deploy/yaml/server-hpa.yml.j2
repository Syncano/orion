apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: orion-server
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: orion-server
  minReplicas: {{ SERVER_MIN }}
  maxReplicas: {{ SERVER_MAX }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 80
